@page "/blocks"
@page "/blocks"
@using CP380_B3_BlockBlazor.Data
@inject BlockService _services
<!-- TODO: Add using and inject statements -->

<h3>Blocks</h3>

@if (blocklist == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card-columns">

        @foreach (var b in blocklist)
        {
            <div class="card" style="width: 24rem;">
                <div class="card-body">
                    <h4 class="card-title" align="center">Harsh: @b.Hash</h4>
                    <p class="card-text">Position: @b.position</p>

                    <p class="card-text">Nonce: @b.Nonce</p>
                    <p class="card-text">Previous Hash: "@b.PreviousHash"</p>
                </div>
            </div>

        }

    </div>
}

@code {
    IEnumerable<Block> blocklist;

    protected override async Task OnInitializedAsync()
    {
        // TODO: fetch blocks from the BlockService

        blocklist = await blockService.GetBlocksAsync();
    }
}
